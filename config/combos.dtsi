/ {
    combos {
        compatible = "zmk,combos";

        /* 1.1.2: J+K → Escape */
        combo_esc {
            timeout-ms = <40>;
            key-positions = <41 42>;
            bindings = <&kp ESC>;
            require-prior-idle-ms = <100>;
        };

        /* 1.1.4: D+F → Tab */
        combo_tab {
            timeout-ms = <40>;
            key-positions = <37 38>;
            bindings = <&kp TAB>;
            require-prior-idle-ms = <100>;
        };

        /* X+C → Delete */
        combo_del {
            timeout-ms = <40>;
            key-positions = <48 49>;
            bindings = <&kp DEL>;
            require-prior-idle-ms = <100>;
        };

        /* C+V → Backspace */
        combo_bspc {
            timeout-ms = <40>;
            key-positions = <49 50>;
            bindings = <&kp BSPC>;
            require-prior-idle-ms = <100>;
        };

        /* 1.3.3: Comma+Dot → Caps Word */
        combo_caps_word {
            timeout-ms = <40>;
            key-positions = <60 61>;
            bindings = <&caps_word>;
            require-prior-idle-ms = <100>;
        };
    };
};
